{
    "compilerOptions": {
      "outDir": "./dist/",
      "baseUrl": "./",
      "paths": {
        "@components": ["src/components"]
      },
      "module": "ESNext",
      "target": "ES5",
      "lib": [
        "DOM",
        "ESNext"
      ],
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "noImplicitAny": true,
      "allowJs": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"]
  }